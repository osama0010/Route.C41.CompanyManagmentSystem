@model SignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">

		<div asp-validation-summary="ModelOnly"></div>
		@* 		<span asp-validation-for="FName" class="text-danger"></span>
		<br /> *@
		<form asp-action="SignIn">
			<br />
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<br />
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<br />
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="rememberMe" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>Don't Have An Account?<a asp-action="SignUp">Register Now!</a></p>
		<p>Forgot Your password ?<a asp-action="SignUp">Reset Now!</a></p>
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}


