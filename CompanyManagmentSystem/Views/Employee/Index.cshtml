 @model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

<br />
<br />

<a asp-action="Create" class="btn btn-primary">Create a new Employee</a>

<br />

<div class="row justify-content-center align-items-center mt-5">
        <form asp-action="Index" class="row col-8 offset-2">
            <div class="col-8">
                <input type="Text" class="form-control" name="searchInput" placeholder="Search By Name"/>
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </form>
</div>

@if(Model.Count() > 0)
{
        <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>Image</th>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                @* <th>@Html.DisplayNameFor(E => E.Age)</th> *@
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.Department)</th>
                @* <th>@Html.DisplayNameFor(E => E.Address)</th> *@
                <th>@Html.DisplayNameFor(E => E.isActive)</th>
                @* <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th> *@
                @* <th>@Html.DisplayNameFor(E => E.HiringDate)</th> *@
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <div>
                            <img src="~/Files/Images/@employee.imageName" width="75" height="75" class="rounded-circle" alt="Employee Image" />
                        </div>
                    </td>
                    <td>@employee.Name</td>
                    <td>@Html.DisplayFor(M => employee.Email)</td>
                    @* <td>@employee.Age</td> *@
                    <td>@employee.Gender</td>
                    <td>@Html.DisplayFor(M => employee.Salary)</td>
                    <td>@employee.Department?.Name</td>
                    @* <td>@employee.Address</td> *@
                    @if (@employee.isActive)
                    {
                        <td>
                            <i class="fa fa-circle" style="color: forestgreen"></i>
                        </td>
                    }
                    else
                    {
                        <td>
                            <i class="fa fa-circle" style="color: red"></i>
                        </td>
                    }
                    @* <td>@employee.PhoneNumber</td> *@
                    @* <td>@employee.HiringDate</td> *@

                    <partial name="_ButtonsPartial" model="@employee.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There's No Employee Records :( </h3>
    </div>
}
