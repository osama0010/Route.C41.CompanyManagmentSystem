@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork
@{
    var Departments = new SelectList(await _unitOfWork.Repository<Department>().GetAllAsync(), "Id", "Name");
}


<div>
    <img src="~/Files/Images/@Model.imageName" width="100" height="100" class="rounded-circle" alt="not loaded fam" />
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Gender"></label>
    <input asp-for="Gender" class="form-control" readonly />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@Departments" asp-for="DepartmentId" readonly>
        <option value="@null">Select Department</option>
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="EmployeeType"></label>
    <select class="form-control" asp-items="Html.GetEnumSelectList<EmpType>()" asp-for="EmployeeType" readonly>
        <option value="@null">Select Employee Type</option>
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" readonly />
</div>
<div class="form-group">
    <input asp-for="isActive" class="form-check-input" readonly />
    <label class="col-form-label" asp-for="isActive"></label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" readonly />
</div>