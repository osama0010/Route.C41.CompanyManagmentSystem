@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Employee @Model.Name Record</h1>

<div>
    <img src="~/Files/Images/@Model.imageName" width="100" height="100" class="rounded-circle" alt="not loaded fam" />
</div>

<div asp-validation-summary="ModelOnly" class="text-dark"></div>

<form asp-action="Edit">

    <partial name="PartialView/CreateEditEmployeePartial" />

    <input type="submit" value="Save" class="btn btn-success" />
    <a asp-action="Index" class="btn btn-danger">Cancel</a>

</form>

@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}